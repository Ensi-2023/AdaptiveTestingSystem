    <Style x:Key="ListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border CornerRadius="5" Background="Transparent" Margin="2" Name="main">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualState x:Name="Unselected" />
                                <VisualState x:Name="Selected">
                                    <Storyboard>
                                        <ColorAnimationUsingKeyFrames  
                                            Storyboard.TargetName="main"
                                            Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" 
                                            >
                                            <EasingColorKeyFrame KeyTime="0:0:0.1" Value="{DynamicResource ListBoxItemSelect}"/>
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="SelectedUnfocused">

                                </VisualState>
                                <VisualState Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimationUsingKeyFrames  
                                            Storyboard.TargetName="main"
                                            Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" 
                                            >
                                            <EasingColorKeyFrame KeyTime="0:0:0.1" Value="{DynamicResource ListBoxItemSelect}"/>
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>


                        </VisualStateManager.VisualStateGroups>
                        <ContentPresenter Margin="5" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>




    <ControlTemplate x:Key="PtextboxNoEditable"  TargetType="{x:Type component:ComboTextBox}">

        <Border Name="root"
                            CornerRadius="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(wpf:TextFieldAssist.CornerRadius)}"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            Width="{TemplateBinding Width}" 
                            Height="{TemplateBinding Height}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <Button Grid.Column="2"
                                    wpf:ButtonAssist.Icon="ChevronDown"
                                    wpf:ButtonAssist.IconView="True"
                                    Style="{DynamicResource IconButtonStyle}"
                                    Visibility="{Binding RelativeSource={RelativeSource TemplatedParent},Path=VisibilityOpenButton}"
                                    FontSize="10"
                                    VerticalAlignment="Center"                                 
                                    Height="25"
                                    Width="25"
                                    Foreground="{DynamicResource WotemarkColor}"
                                    x:Name="PART_Button"/>

                <icon:PackIconMaterial 
                                Foreground="{DynamicResource WotemarkColor}"
                                Height="10"
                                Width="10" 
                                Margin="5"
                                Kind="ChevronDown" 
                                VerticalAlignment="Center"
                                Grid.Column="2"
                                Visibility="Collapsed"
                                x:Name="PART_IconNoEditable"/>

                <Popup 
                                Placement="Top"
                                Grid.Column="0" 
                                VerticalOffset="-2"
                                StaysOpen ="False"
                                HorizontalOffset="-10"
                                Grid.ColumnSpan="2"
                                AllowsTransparency="True"
                                IsOpen="{TemplateBinding IsOpen}"
                                x:Name="PART_Popup">
                    <ListBox x:Name="PART_CollectionList" SelectedIndex="{TemplateBinding SelectedIndex}" ItemsSource="{TemplateBinding Items}" Style="{DynamicResource ListBoxStyle}"/>

                </Popup>


                <icon:PackIconMaterial Kind="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(wpf:TextFieldAssist.Icon)}" 
                                                   Grid.Column="0" 
                                                   VerticalAlignment="Center"
                                                   Name="_icons"
                                                   Margin="5"
                                                   Foreground="{DynamicResource WotemarkColor}"
                                                   Visibility="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(wpf:TextFieldAssist.IconVisibility)}"/>

                <TextBlock Grid.Column="1"
                                       Name="PART_Wotemark" 
                                       Visibility="Collapsed"
                                       Text="{TemplateBinding Wotemark}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Focusable="False"
                                       Margin="5 0 0 0"
                                       FontSize="{TemplateBinding WotemarkFontSize}"
                                       Foreground="{DynamicResource WotemarkColor}"/>


                <ContentPresenter  Grid.Column="1" Visibility="Visible"
                                   Content="{TemplateBinding Text}"
                                   Margin="5 0 0 0"
                                   VerticalAlignment="Center"/>

            </Grid>
        </Border>
        <ControlTemplate.Triggers>


            <Trigger Property="IsEditable" Value="False">
                <Setter Property="Visibility" Value="Collapsed" TargetName="PART_Wotemark"/>
                <Setter Property="Visibility" Value="Collapsed" TargetName="PART_Button"/>
                <Setter Property="Visibility" Value="Visible" TargetName="PART_IconNoEditable"/>
                <Setter Property="IsReadOnly" Value="True"/>
            </Trigger>

            <Trigger Property="IsOpen" Value="True">
                <Setter Property="wpf:ButtonAssist.Icon" TargetName="PART_Button" Value="ChevronUp"/>
                <Setter Property="Kind" TargetName="PART_IconNoEditable" Value="ChevronUp"/>
            </Trigger>


            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="root" Property="Background" Value="{DynamicResource BorderColor_MouseEnter}"/>

            </Trigger>

            <Trigger Property="IsFocused" Value="True">
                <Setter TargetName="root"  Property="Background" Value="{DynamicResource BorderColor_Focused}"/>
                <Setter TargetName="_icons" Property="Foreground" Value="{DynamicResource TextFieldForegroud}"/>
                <Setter TargetName="PART_Wotemark" Property="Foreground" Value="{DynamicResource TextFieldForegroud}"/>
                <Setter TargetName="PART_Button" Property="Foreground" Value="{DynamicResource TextFieldForegroud}"/>
                <Setter TargetName="PART_IconNoEditable" Property="Foreground" Value="{DynamicResource TextFieldForegroud}"/>
            </Trigger>



            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Text" Value=""/>
                    <Condition Property="WotemarkVisible" Value="true"/>
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter TargetName="PART_Wotemark" Property="Visibility" Value="Visible"/>
                </MultiTrigger.Setters>
            </MultiTrigger>
        </ControlTemplate.Triggers>

    </ControlTemplate>

