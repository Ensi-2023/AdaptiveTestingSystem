                                Placement="{TemplateBinding Placment}"
                                Grid.Column="0" 
                                VerticalOffset="-2"
                                StaysOpen ="False"
                                HorizontalOffset="-10"
                                Grid.ColumnSpan="2"
                                AllowsTransparency="True"
                              
                                IsOpen="{TemplateBinding IsOpen}"
                                x:Name="PART_Popup">
                                <ListBox x:Name="PART_CollectionList" MaxHeight="{TemplateBinding MaxPopupHeight}" SelectedIndex="{TemplateBinding SelectedIndex}" ItemsSource="{TemplateBinding Items}" Style="{DynamicResource ListBoxStyle}"/>

                            </Popup>


                            <icon:PackIconMaterial Kind="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(wpf:TextFieldAssist.Icon)}" 
                                                   Grid.Column="0" 
                                                   VerticalAlignment="Center"
                                                   Name="_icons"
                                                   Margin="5"
                                                   Foreground="{DynamicResource WotemarkColor}"
                                                   Visibility="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(wpf:TextFieldAssist.IconVisibility)}"/>

                            <TextBlock Grid.Column="1"
                                       Name="PART_Wotemark" 
                                       Visibility="Collapsed"
                                       Text="{TemplateBinding Wotemark}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Focusable="False"
                                       Margin="5 0 0 0"
                                       FontSize="{TemplateBinding WotemarkFontSize}"
                                       Foreground="{DynamicResource WotemarkColor}"/>


                            <ScrollViewer Grid.Column="1" Visibility="Visible"
                                          VerticalAlignment="Center"
                                          BorderThickness="0"
                                          IsTabStop="False" 
                                          x:Name="PART_ContentHost" 
                                          Margin="0" 
                                          Padding="{TemplateBinding Padding}"/>




                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>


                        <Trigger Property="Popup.IsOpen" SourceName="PART_Popup" Value="True">
                            <Setter Property="wpf:ButtonAssist.Icon" TargetName="P_Button" Value="ChevronUp"/>
                        </Trigger>


                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="root" Property="Background" Value="{DynamicResource BorderColor_MouseEnter}"/>

                        </Trigger>

                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="root"  Property="Background" Value="{DynamicResource BorderColor_Focused}"/>
                            <Setter TargetName="_icons" Property="Foreground" Value="{DynamicResource TextFieldForegroud}"/>
                            <Setter TargetName="PART_Wotemark" Property="Foreground" Value="{DynamicResource TextFieldForegroud}"/>
                        </Trigger>



                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Text" Value=""/>
                                <Condition Property="WotemarkVisible" Value="true"/>
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter TargetName="PART_Wotemark" Property="Visibility" Value="Visible"/>
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsEditable" Value="False">
                <Setter Property="Template" Value="{StaticResource PtextboxNoEditable}"/>
            </Trigger>
        </Style.Triggers>
    </Style>


</ResourceDictionary>